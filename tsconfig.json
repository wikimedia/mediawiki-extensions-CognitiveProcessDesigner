{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
		"resolveJsonModule": true, // Needed for importing json files; doesnt work
        "allowSyntheticDefaultImports": true, // Needed for e.g. import EventEmitter
        "esModuleInterop": true, // To prevent issues with importing script in jest
		"skipLibCheck": true, // To prevent issues with node_modules libs
    }
}
