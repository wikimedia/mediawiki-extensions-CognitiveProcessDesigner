<table class="cpd-navigation-connections">
	{{#incoming}}
	<tr>
		<th>{{incomingheading}}</th>
		<td>
			<div>
				<a href="{{link}}" title="{{title}}" class="cpd-nav-item {{class}}">{{{text}}}</a>
			</div>
		</td>
	</tr>
	{{/incoming}}
	{{#outgoing}}
	<tr>
		<th>{{outgoingheading}}</th>
		<td>
			<div>
				<a href="{{link}}" title="{{title}}" class="cpd-nav-item {{class}}">{{{text}}}</a>
			</div>
		</td>
	</tr>
	{{/outgoing}}
</table>

